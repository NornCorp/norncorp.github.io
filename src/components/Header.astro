---
const navigation = [
    { name: 'Products', href: '#' },
    { name: 'Resources', href: '#' },
    { name: 'Docs', href: '#' },
    { name: 'Company', href: '#' },
];
---

<header class="bg-norn-darker">
    <nav aria-label="Global" class="flex items-center justify-between p-6 lg:px-8">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5 flex items-center gap-x-3">
                <span class="sr-only">NornCorp</span>
                <img alt="NornCorp" src="/logo.svg" class="h-10 w-auto" />
                <span class="text-xl font-semibold text-white">NornCorp</span>
            </a>
        </div>
        <div class="flex lg:hidden">
            <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
                <span class="sr-only">Open main menu</span>
                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-12">
            {navigation.map((item) => (
                <a href={item.href} class="text-sm font-semibold text-white hover:text-norn-green">
                    {item.name}
                </a>
            ))}
        </div>
        <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-6">
            <a href="#" class="text-sm font-semibold text-white hover:text-norn-green">Log in</a>
            <a href="#" class="rounded-md bg-norn-green px-3.5 py-2 text-sm font-semibold text-norn-dark hover:bg-norn-green-light">
                Get Started
            </a>
        </div>
    </nav>
</header>
