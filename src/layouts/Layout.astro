---
import '../styles/global.css'

interface Props {
    title?: string;
}

const { title = 'NornCorp - Security Infrastructure for the Modern Enterprise' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="bg-norn-dark text-gray-100 min-h-screen flex flex-col">
    <slot />
</body>
</html>
